<header>
  <div class="wrapper">
    <input type="checkbox" id="menu_control">
    <label for="menu_control" class="menu__btn">
      <i class="fas fa-bars"></i>
    </label>
    <nav>
      <h1 class="logo">
        <a href="/">YangBLOG</a>
      </h1>
      <ul class="menu">
        <% if(categories) { %>
          <li>
            <a href="/article-list" class="">文章列表</a>
          </li>
          <% categories.forEach(category=>{ %>
            <li>
              <a href="/articles?categoryId=<%=category.id%>" class="">
                <%= category.category_name%>
              </a>
            </li>
            <% })%>
              <%}%>
      </ul>
    </nav>

  </div>
  <div class="user__info">
    <div class="user_action">
      <% if(!username) {%>
        <a href="/login">登入</a>
        <% }else if(role==='admin' ) {%>
          <div class="user__nickname">
            <%= nickname %>，你好
          </div>
          <a href="/admin/article-list">管理文章</a>
          <a href="/admin/add-article">新增文章</a>
          <a href="/admin/category-list">分類管理</a>
          <a href="/logout">登出</a>
          <%} else {%>
            <div class="user__nickname">
              <%= nickname %>，你好
            </div>
            <a href="logout">登出</a>
            <% }%>
    </div>

  </div>
</header>