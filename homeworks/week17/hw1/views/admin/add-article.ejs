<%- include('../templates/head.ejs')%>
  <%- include('../templates/navigation.ejs', {categories})%>
    <%- include('../templates/banner.ejs')%>
      <div class="articles">
        <form action="/admin/add-article" method="POST">
          <div class="article">
            <div class="article__header">
              <div class="article__title">
                <div class="title">文章標題：</div>
                <input type="text" name="article_title" value="" />
              </div>
              <div class="article__time">
                <div class="title">文章分類：</div>
                <select class="input__field form-hide" name="category_id">
                  <% categories.forEach( category=> {%>
                    <option value="<%= category.id%>">
                      <%= category.category_name %>
                    </option>
                    <% }) %>
                </select>

              </div>
              <div class="article__time">
              </div>
            </div>
            <div class="article__body">
              <div class="title">文章內容：</div>
              <textarea name="article_content" cols="60" rows="30"></textarea>
            </div>

          </div>

          <input type="submit" class="submit-btn" value="新增文章" />
        </form>
        <div class="form__warning">
          <div>
            <% if (errorMessage && errorMessage.length> 0) { %>
              <p>
                <%= errorMessage %>
              </p>
              <% } %>

          </div>
        </div>
      </div>

      <%- include('../templates/sidebar.ejs', {newArticles, newComments})%>
        <%- include('../templates/footer.ejs')%>